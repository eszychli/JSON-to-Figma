doctype html  
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='icon', type='image/png', href='fav/fav-ico-64x64.png', sizes='64x64')
        link(rel='icon', type='image/png', href='fav/fav-ico-32x32.png', sizes='32x32')
        link(rel='icon', type='image/png', href='fav/fav-ico-16x16.png', sizes='16x16')
        title JSON To Figma
        meta(name='description', content='Populate Figma layers with your JSON strings')
        meta(name='author', content='Pavel Laptev')

        meta(property='og:title' content='JSON To Figma')
        meta(property='og:image' content='https://pavellaptev.github.io/web-dark-ages/img/web-preview.jpg')
        meta(property='og:description' content='Populate Figma layers with your JSON strings')
